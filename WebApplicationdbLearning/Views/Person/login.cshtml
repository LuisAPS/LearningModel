    <!--jscripts-->
    

    <script src="~/Scripts/Views/View.login.js"></script>


    <script>
        $(document).ready(function () {
            var o = {
                button: {
                    Signme: "#btnSignme"
                },
                url:{
                    
                },
                method: {
                   login:"/Person/login"
                },
                text: {
                    User: "#txtUser",
                    Pass: "#txtPass"
                },
                label: {
                    error:"#lblError"
                }
            }
            View.login.Init(o);
        });
    </script>
